<Window x:Class="TreeView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeView"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <DockPanel x:Name="Layout"
               Focusable="True">
        <DockPanel Margin="5" DockPanel.Dock="Bottom">
            <Button Command="{Binding LoadCommand}" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Load">
            </Button>
            <Grid Margin="2">
                <TextBox x:Name="Searching" VerticalAlignment="Bottom" FontSize="13" Text="{Binding Filter,UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </DockPanel>
        <ListBox ItemsSource="{Binding Category}"
                 DockPanel.Dock="Top"
                 VirtualizingStackPanel.IsVirtualizing ="True"
                 ScrollViewer.CanContentScroll="True"
                 Background="Transparent"
                 BorderThickness="0">
            <DockPanel>
                <TextBlock Text="{Binding Name}" DockPanel.Dock="Top"
                                           FontSize="15"
                                           Margin="5,2,0,2"/>
                <ListBox ItemsSource="{Binding Items}" DockPanel.Dock="Top"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectedValue="{Binding Path=DataContext.SelectedItem}">
                </ListBox>
           </DockPanel>
     </ListBox>
  </DockPanel>
</Window>
